{
  "name": "zest",
  "version": "1.0.0",
  "description": "A NestJS API",
  "author": "Cleiton Pereira <cleiton.spereira@live.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "prestart": "npm run build",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:hmr": "node dist/server",
    "lint:check": "tslint -c tslint.json --project tsconfig.json",
    "lint:write": "npm run lint:check -- --fix",
    "test": "jest -b",
    "test:staged": "lint-staged",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --silent",
    "webpack": "webpack --config webpack.config.js"
  },
  "pre-commit": "test:staged",
  "dependencies": {
    "@nest-modules/mailer": "https://github.com/cleitonper/mailer.git#master",
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/jwt": "^0.2.0",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/swagger": "^2.5.1",
    "nestjs-config": "^1.2.8",
    "class-transformer": "^0.1.10",
    "class-validator": "^0.9.1",
    "fastify": "^1.13.0",
    "fastify-formbody": "^2.0.1",
    "fastify-static": "^0.14.0",
    "fastify-swagger": "^0.16.1",
    "lint-staged": "^8.0.4",
    "mongoose": "^5.3.9",
    "mongoose-bcrypt": "^1.6.0",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "point-of-view": "^2.0.0",
    "pug": "^2.0.3",
    "rxjs": "^6.2.2",
    "pre-commit": "^1.2.2",
    "reflect-metadata": "^0.1.12",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.6.0",
    "nodemon": "^1.18.3",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "superagent": "^4.0.0-beta.5",
    "superagent-defaults": "^0.1.14",
    "tslint": "5.11.0",
    "tslint-sonarts": "^1.8.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": false,
    "coverageDirectory": "../coverage/",
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/shared",
      "<rootDir>/config",
      "/types",
      "main.ts",
      "main.hmr.ts",
      ".module.ts",
      ".schema.ts",
      ".mock.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "npm run lint:check",
    "*.spec.ts": "npm run test -- -o --findRelatedTests",
    "test/**/*.e2e-spec.ts": "npm run test:e2e -- -o --findRelatedTests"
  }
}
